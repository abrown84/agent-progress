{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "progress-overlay",
  "version": "1.0.0",
  "identifier": "com.agentprogress.overlay",
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "devUrl": "http://localhost:5180",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Progress Overlay",
        "width": 320,
        "height": 400,
        "x": null,
        "y": null,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": false,
        "decorations": false,
        "skipTaskbar": false,
        "visible": true,
        "focus": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "title": "Agent Progress"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
